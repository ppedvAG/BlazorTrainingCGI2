@page "/monate"
<h3>gewählt: @Monat</h3>
<div class="container">
    <div class="row ">
        <div class="col">
            <ul class="list-group">
                <li class="list-group-item active">
                    Monate
                </li>
                @for (int i = 0; i < 12; i++)
                {
                    int x = i;
                    <li class="list-group-item list-group-item-action" @onclick="()=>auswahl(x)">
                        @DateTime.Now.AddMonths(i).ToString("MMMM")
                    </li>

                }
            </ul>
        </div>

    </div>
</div>

@code {
    public string Monat { get; set; }
    void auswahl(int a)
    {
        Monat = DateTime.Now.AddMonths(a).ToString("MMMM");
    }

}
