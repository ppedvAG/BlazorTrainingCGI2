@page "/chat"
@inject ChatVM vm
<h3>Chat</h3>
<div class="row">
    <div class="col">

        <div class="input-group mb-3">
            <input type="text" class="form-control" @bind="NeuMsg">
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="button" id="button-addon2" @onclick="send">Send</button>
            </div>
        </div>

    </div>
</div>
<div class="row">
    <div class="col">
        <ul class="list-group">
            <li class="list-group-item active">Nachrichten </li>
            @foreach (var item in vm.ChatListe)
            {
                <li class="list-group-item">@item</li>
            }
        </ul>
    </div>
</div>
@code {
    public string NeuMsg { get; set; }
    void send()
    {
        vm.Add(NeuMsg);
    }
    protected override void OnInitialized()
    {
        vm.onAdd += ()=>InvokeAsync(StateHasChanged);
    }
}
